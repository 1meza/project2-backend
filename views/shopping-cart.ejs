<script>
    //sample data. need to figure out how to add directly from product 1 page.
    let cart = [
        { name: "Jordan 3 'AMM'", price: 180, quantity: 1}
    ];

    // Function to display the items in the cart
    function displayCartItems() {
        const cartItemsContainer = document.getElementById('cartItems');
        cartItemsContainer.innerHTML = '';
        cart.forEach(item => {
            const cartItem = document.createElement('div');
            cartItem.innerHTML = `<p>${item.name} - Price: $${item.price} - Quantity: ${item.quantity}</p>`;
            cartItemsContainer.appendChild(cartItem);
        });
    }

    displayCartItems();
</script>

